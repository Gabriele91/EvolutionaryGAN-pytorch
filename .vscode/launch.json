    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Toy GAUSSIAN25",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--name","egan_toy",
                "--dataset_mode", "toy", "--toy_name", "gaussian25", "--batch_size", "32",  "--eval_size", "256", "--dataroot", "None",
                "--model", "egan",
                "--gpu_ids", "0", 
                //"--dataset_name", "GAUSSIAN25", //--download_root ./datasets/cifar10 
                "--crop_size", "32", "--load_size", "32",
                "--d_loss_mode","vanilla", "--g_loss_mode", "vanilla", "lsgan", "--which_D","S", 
                "--lambda_f", "0.05", "--candi_num", "1", 
                
                //generator input
                "--z_type", "Uniform", "--z_dim","2",

                "--netD", "DCGAN_toy", "--netG", "DCGAN_toy", "--ngf", "128","--ndf", "128", "--g_norm", "none", "--d_norm","batch",
                
                "--init_type", "normal", "--init_gain", "0.02", 
                "--no_dropout", "--no_flip", 
                "--D_iters", "3",
                //
                //"--use_pytorch_scores", "--score_name","IS", "--evaluation_size","50000","--fid_batch_size","500",
                "--score_name", "TOY_METRIC","--evaluation_size","500","--fid_batch_size","50",
                //
                "--print_freq", "100", "--display_freq", "2000", "--score_freq", "100", "--display_id", "-1", "--save_giters_freq", "100"
            ],
            "console": "integratedTerminal"
        }
    ],
    "configurations": [
        
        {
            "name": "Python: MNIST",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--name","egan_mnist",
                "--dataset_mode", "torchvision",
                "--download_root", "./datasets/FashionMNIST", 
                "--dataset_name", "FashionMNIST", 
                "--batch_size", "32", 
                "--eval_size", "256", 
                "--dataroot", "None",

                "--model", "egan",
                "--gpu_ids", "0", 

                "--preprocess","", 
                "--input_nc", "1",
                "--output_nc", "1",
                //just for visual output
                "--crop_size", "28"
                //"--crop_size", "28", 
                //"--load_size", "28",
                //noise
                "--z_dim","100",
                "--z_type", "Gaussian",

                //generator input
                "--d_loss_mode","vanilla", "--g_loss_mode", "vanilla", "lsgan", "--which_D","S", 
                "--lambda_f", "0.05", "--candi_num", "1", 
                
                //net
                "--netD", "DCGAN_mnist", "--netG", "DCGAN_mnist", 
                //"--cgan", 
                //net size
                "--ngf", "32",
                "--ndf", "32", 
                //
                "--g_norm", "none", "--d_norm","batch",
                
                "--init_type", "normal", "--init_gain", "0.02", 
                "--no_dropout", "--no_flip", 
                "--D_iters", "3",
                //
                //"--use_pytorch_scores", "--score_name","IS", "--evaluation_size","2000","--fid_batch_size","500",
                "--score_name", "TOY_METRIC","--evaluation_size","500","--fid_batch_size","50",
                //
                "--print_freq", "1000", "--display_freq", "1000", "--score_freq", "1000", "--display_id", "-1", "--save_giters_freq", "1000"
            ],
            "console": "integratedTerminal"
        }
    ]
}